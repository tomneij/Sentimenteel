@using Website.Models

@model LabelModel
@{
    Layout = null;
}

@if (Model != null)
{
    <h2>Trend over de gemeten tijd</h2>
    <div id="chartContainer" style="height: 370px; width: 100%;"></div>
}
else
{
    <p>ERROR</p>
}


<script>
window.onload = function() {

    var chart = new CanvasJS.Chart("chartContainer",
        {
            animationEnabled: true,
            
            toolTip: {
                shared: true,
                fontColor: "black"
            },
            data: [
                {
                    type: "line",
                    name: "Positief",
                    showInLegend: true,
                    lineColor: "green",
                    markerColor: "green",
                    dataPoints: @Html.Raw(ViewBag.Positive)
                }, {
                    type: "line",
                    name: "Neutraal",
                    showInLegend: true,
                    lineColor: "blue",
                    markerColor: "blue",
                    dataPoints: @Html.Raw(ViewBag.Neutral)
                }, {
                    type: "line",
                    name: "Negatief",
                    showInLegend: true,
                    lineColor: "red",
                    markerColor: "red",
                    dataPoints: @Html.Raw(ViewBag.Negative)
                }
            ]
        });
    chart.render();
}
</script>





